# located /var/nginx/sites-available/disposable-sockets

server {
    listen 80;
    server_name www.signaturechat.com;    

    access_log /var/log/nginx/disposable-sockets/access.log;
    error_log /var/log/nginx/disposable-sockets/error.log;

    location = /favicon.ico {
        access_log off;
        log_not_found off;
    }
    
    location /static/ {
        root /home/corbe054/disposable-sockets/;
    }

    location ~ /stream {
        proxy_pass http://0.0.0.0:8000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        proxy_redirect     off;
        proxy_set_header   Host $host;
        proxy_set_header   X-Real-IP $remote_addr;
        proxy_set_header   X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header   X-Forwarded-Host $server_name;
    }
    
    location / {
        include         uwsgi_params;
        uwsgi_pass      unix:/run/uwsgi/disposable-sockets.sock;
    }
}
